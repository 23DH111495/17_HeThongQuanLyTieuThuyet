<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="#252525"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cover Image with Status Badge and Rating -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/ivNovelCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Novel Cover" />

            <!-- Status Badge (Top Left) -->
            <TextView
                android:id="@+id/tvNovelStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:text="ONGOING"
                android:textSize="8sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/bg_status_ongoing"
                android:elevation="2dp"
                android:letterSpacing="0.05" />

            <!-- Premium Badge (Top Right) -->
            <TextView
                android:id="@+id/tvNovelPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:text="PREMIUM"
                android:textSize="7sp"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_premium_badge"
                android:visibility="gone" />

            <!-- Rating Badge (Bottom Right) -->
            <TextView
                android:id="@+id/tvNovelRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:text="â˜… 4.50 (123)"
                android:textSize="10sp"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="#AA000000"
                android:elevation="2dp" />

        </FrameLayout>

        <!-- Novel Details - Compact Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <!-- Title - Compact -->
            <TextView
                android:id="@+id/tvNovelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Novel Title"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="3dp"
                android:minHeight="28dp" />

            <!-- Author -->
            <TextView
                android:id="@+id/tvNovelAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by Author Name"
                android:textSize="9sp"
                android:textColor="#999999"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Chapters - Bigger -->
            <TextView
                android:id="@+id/tvNovelChapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 chapters"
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>