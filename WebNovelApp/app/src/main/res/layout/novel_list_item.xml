<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/ranking_card_background"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivNovelCover"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@drawable/placeholder_cover"
            android:contentDescription="Novel Cover" />

        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="Next"
            app:tint="@color/ranking_text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/fullInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivNovelCover"
            app:layout_constraintEnd_toStartOf="@+id/ivChevron"
            app:layout_constraintTop_toTopOf="@id/ivNovelCover"
            app:layout_constraintBottom_toBottomOf="@id/ivNovelCover">

            <TextView
                android:id="@+id/tvNovelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ranking_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Lord of the Mysteries: The Mystery Beyond the Veil" />

            <TextView
                android:id="@+id/tvNovelAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/ranking_text_secondary"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="By Cutlefish That Loves Diving" />

            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvViewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ranking_text_secondary"
                    android:textSize="13sp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    app:drawableStartCompat="@drawable/ic_eye_mini"
                    app:drawableTint="@color/ranking_text_secondary"
                    tools:text="1.1K" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ranking_green_label"
                    android:textSize="13sp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    app:drawableStartCompat="@drawable/ic_star"
                    app:drawableTint="@color/ranking_green_label"
                    tools:text="4.8" />

                <TextView
                    android:id="@+id/tvBookmarkCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bm_yellow"
                    android:textSize="13sp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/icon_bookmark_mini"
                    app:drawableTint="@color/bm_yellow"
                    tools:text="9.5K" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>