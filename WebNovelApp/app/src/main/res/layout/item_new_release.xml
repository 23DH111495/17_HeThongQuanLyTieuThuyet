<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#252525"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cover Image with Status Badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/ivCoverNewRelease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Novel Cover" />

            <!-- Status Badge (Top Left) -->
            <TextView
                android:id="@+id/tvStatusNewRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:text="ONGOING"
                android:textSize="10sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_status_ongoing"
                android:elevation="2dp"
                android:letterSpacing="0.05" />

            <!-- Premium Badge (Top Right) -->
            <TextView
                android:id="@+id/tvNovelPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:text="PREMIUM"
                android:textSize="9sp"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_premium_badge"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Novel Details - Fixed Height Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Title - Fixed Height -->
            <TextView
                android:id="@+id/tvTitleNewRelease"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Novel Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Author -->
            <TextView
                android:id="@+id/tvAuthorNewRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by Author Name"
                android:textSize="10sp"
                android:textColor="#999999"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Chapters -->
            <TextView
                android:id="@+id/tvChaptersNewRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 chapters"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginBottom="4dp" />

            <!-- Rating -->
            <TextView
                android:id="@+id/tvRatingNewRelease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â˜… 4.50 (123)"
                android:textSize="10sp"
                android:textColor="#FFD700" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>