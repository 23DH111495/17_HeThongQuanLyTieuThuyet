<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#2a2a2a"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cover Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/ivNovelCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#333333"
                android:contentDescription="Novel Cover" />

            <!-- Premium Badge -->
            <TextView
                android:id="@+id/tvNovelPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/badge_premium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="ðŸ‘‘ Premium"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Rating Badge -->
            <TextView
                android:id="@+id/tvNovelRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:background="#CC000000"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="â˜… 4.5"
                android:textColor="#FFD700"
                android:textSize="11sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Novel Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvNovelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Novel Title"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Author -->
            <TextView
                android:id="@+id/tvNovelAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="by Author Name"
                android:textColor="#77dd77"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="6dp" />

            <!-- Genres -->
            <TextView
                android:id="@+id/tvNovelGenres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fantasy, Adventure"
                android:textColor="#999999"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="6dp" />

            <!-- Bottom Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNovelStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ongoing"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNovelChapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125 ch"
                    android:textColor="#cccccc"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>