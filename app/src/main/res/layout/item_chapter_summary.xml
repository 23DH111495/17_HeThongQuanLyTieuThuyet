<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#1a1a1a"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChapterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 1: Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#77dd77"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvChapterInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3,500 words â€¢ 2024-01-01"
                android:textSize="11sp"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- UNLOCKED Indicator (Green unlock icon) -->
        <LinearLayout
            android:id="@+id/llUnlockedIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_unlock"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlocked"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#77dd77" />

        </LinearLayout>

        <!-- LOCKED Premium Indicator (Gold lock + price) -->
        <LinearLayout
            android:id="@+id/llPremiumIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivLockIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvChapterPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 coins"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFD700"
                android:background="@drawable/bg_premium_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>