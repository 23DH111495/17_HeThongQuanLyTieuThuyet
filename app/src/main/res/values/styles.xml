<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Expanded Title Text Style for CollapsingToolbar -->
    <style name="ExpandedTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>




    <!-- Base application theme. -->
    <style name="Theme.NovelReader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Circle shape for avatar -->
    <style name="ShapeAppearance.App.Circle" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Add to res/values/styles.xml -->
    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#1a1a1a</item>
        <item name="android:textColor">#e0e0e0</item>
        <item name="colorAccent">#b0b0b0</item>
    </style>

</resources>