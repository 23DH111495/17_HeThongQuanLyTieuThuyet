<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0f0f">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== STYLE 0: FEATURED SLIDER NOVELS ==================== -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- ViewPager2 for Slider -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpFeaturedSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp" />

                <!-- Indicator Dots -->
                <LinearLayout
                    android:id="@+id/sliderIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />
            </RelativeLayout>

            <!-- ==================== STYLE 1: ENHANCED WEEKLY FEATURED ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly Featured"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Handpicked for you this week"
                            android:textSize="12sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvViewAllEnhanced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWeeklyFeaturedEnhanced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== STYLE 2: NETFLIX STYLE ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Premium Novels"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#e0e0e0"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/tvViewAllNetflix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWeeklyFeaturedNetflix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== RANKING SECTION ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Rankings"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFD700"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most viewed novels"
                            android:textSize="12sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvViewAllRankings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Top 3 Podium -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="16dp"
                    android:baselineAligned="false">

                    <!-- Rank 2 -->
                    <LinearLayout
                        android:id="@+id/rankingPodium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🥈"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="110dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/ivRank2Cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#1a1a1a" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="6dp"
                                android:background="@drawable/circle_rank_silver_bg"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvRank2Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#C0C0C0"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tvRank2Views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 views"
                            android:textSize="10sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Rank 1 (Larger) -->
                    <LinearLayout
                        android:id="@+id/rankingPodium1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👑"
                            android:textSize="32sp"
                            android:layout_marginBottom="4dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="140dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="12dp"
                            app:strokeColor="#FFD700"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:id="@+id/ivRank1Cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#1a1a1a" />

                            <TextView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="8dp"
                                android:background="@drawable/circle_rank_gold_bg"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvRank1Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FFD700"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvRank1Views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 views"
                            android:textSize="11sp"
                            android:textColor="#FFD700"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Rank 3 -->
                    <LinearLayout
                        android:id="@+id/rankingPodium3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🥉"
                            android:textSize="24sp"
                            android:layout_marginBottom="4dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="110dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp">

                            <ImageView
                                android:id="@+id/ivRank3Cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:background="#1a1a1a" />

                            <TextView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="6dp"
                                android:background="@drawable/circle_rank_bronze_bg"
                                android:gravity="center"
                                android:text="3"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvRank3Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#CD7F32"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="6dp" />

                        <TextView
                            android:id="@+id/tvRank3Views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 views"
                            android:textSize="10sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ranking List (Rank 4-10) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopRankings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false" />
            </LinearLayout>

            <!-- ==================== ONGOING NOVELS GRID (3x4) ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing Novels"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stories being updated"
                            android:textSize="12sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvViewAllOngoing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Grid RecyclerView (3 columns) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOngoingNovels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== STYLE 3: WEBNOVEL STYLE ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recommend Novels"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#e0e0e0"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/tvViewAllWebnovel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWeeklyFeaturedWebnovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== COMPLETED NOVELS GRID (3x4) ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed Novels"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finished stories to binge"
                            android:textSize="12sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvViewAllCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Grid RecyclerView (3 columns) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCompletedNovels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== STYLE 4: NEW RELEASES ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvNewReleasesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recently Added"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#e0e0e0"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:id="@+id/tvViewAllNewReleases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textSize="14sp"
                        android:textColor="#b0b0b0"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>

                <!-- Horizontal RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNewReleases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipToPadding="false"
                    android:clipChildren="false" />
            </LinearLayout>

            <!-- ==================== DISCOVERY SECTION ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="80dp"
                android:background="#0f0f0f">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discover"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#e0e0e0"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hidden gems waiting for you"
                            android:textSize="12sp"
                            android:textColor="#808080"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Preference Filter Button -->
                    <TextView
                        android:id="@+id/tvDiscoverFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balanced"
                        android:textSize="13sp"
                        android:textColor="#b0b0b0"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/filter_button_bg"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:drawablePadding="4dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="invisible" />
                </LinearLayout>

                <!-- Discovery RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDiscoverNovels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:clipToPadding="false" />

                <!-- Pagination Controls -->
                <LinearLayout
                    android:id="@+id/llDiscoverPagination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- First Page Button -->
                    <TextView
                        android:id="@+id/btnDiscoverFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏮"
                        android:textSize="16sp"
                        android:textColor="#b0b0b0"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/pagination_button_bg"
                        android:layout_marginEnd="8dp"
                        android:enabled="false" />

                    <!-- Previous Button -->
                    <TextView
                        android:id="@+id/btnDiscoverPrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="←"
                        android:textSize="16sp"
                        android:textColor="#b0b0b0"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/pagination_button_bg"
                        android:layout_marginEnd="8dp"
                        android:enabled="false" />

                    <!-- Page Numbers Container (Centered) -->
                    <LinearLayout
                        android:id="@+id/llPageNumbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" />

                    <!-- Next Button -->
                    <TextView
                        android:id="@+id/btnDiscoverNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textSize="16sp"
                        android:textColor="#e0e0e0"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/pagination_button_bg"
                        android:layout_marginStart="8dp" />

                    <!-- Last Page Button -->
                    <TextView
                        android:id="@+id/btnDiscoverLast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏭"
                        android:textSize="16sp"
                        android:textColor="#e0e0e0"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:background="@drawable/pagination_button_bg"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/pbDiscoverLoading"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:indeterminateTint="#b0b0b0"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>