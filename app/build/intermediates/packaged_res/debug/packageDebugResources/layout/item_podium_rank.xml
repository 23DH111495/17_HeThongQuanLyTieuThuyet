<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Medal Icon -->
    <ImageView
        android:id="@+id/ivMedal"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_medal_silver"
        android:layout_marginBottom="8dp" />

    <!-- Cover Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="120dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#333333" />

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/tvRank"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/circle_rank_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novel Title"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp" />

    <!-- Views -->
    <TextView
        android:id="@+id/tvViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 views"
        android:textSize="11sp"
        android:textColor="#77dd77"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_visibility"
        android:drawablePadding="4dp"
        android:drawableTint="#77dd77" />
</LinearLayout>
