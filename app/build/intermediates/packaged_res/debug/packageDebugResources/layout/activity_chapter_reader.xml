<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1a1a1a"
            app:titleTextColor="#77dd77"
            app:navigationIconTint="#77dd77">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingEnd="8dp">

                <ImageButton
                    android:id="@+id/btnScrollUpToolbar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/arrow_up_float"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#77dd77"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Scroll to top"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnScrollDownToolbar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#77dd77"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Scroll to bottom"
                    android:layout_marginEnd="0dp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/ttsControlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2a2a2a"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text to Speech"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btnTtsPlayPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#77dd77"
            android:layout_marginStart="16dp"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/btnTtsStop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#ff6b6b"
            android:layout_marginStart="8dp"
            android:contentDescription="Stop" />

        <Spinner
            android:id="@+id/spinnerTtsSpeed"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:entries="@array/tts_speed_options" />

        <Spinner
            android:id="@+id/spinnerTtsVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnTtsSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#77dd77"
            android:contentDescription="Settings" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:indeterminateTint="#77dd77"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Novel Title with TTS Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvNovelTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Novel Title"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                    <ImageButton
                        android:id="@+id/btnTtsToggle"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_lock_silent_mode_off"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="#77dd77"
                        android:contentDescription="Text to Speech"
                        android:padding="4dp" />

                </LinearLayout>

                <!-- Chapter Title -->
                <TextView
                    android:id="@+id/tvChapterTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chapter 1: Title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#77dd77"
                    android:layout_marginBottom="8dp" />

                <!-- Chapter Info -->
                <TextView
                    android:id="@+id/tvChapterInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.2K words â€¢ Dec 20, 2024"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Access Info -->
                <TextView
                    android:id="@+id/tvAccessInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This chapter is free to read"
                    android:textSize="12sp"
                    android:textColor="#77dd77"
                    android:padding="8dp"
                    android:background="#252525"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <!-- Chapter Content -->
                <TextView
                    android:id="@+id/tvChapterContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chapter content will appear here..."
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#e0e0e0"
                    android:layout_marginBottom="24dp"
                    android:breakStrategy="balanced"
                    android:hyphenationFrequency="normal" />

                <!-- Locked Content Layout -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutLocked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="#252525"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”’ This chapter is locked"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#77dd77"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Preview:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#cccccc"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvPreviewContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Preview content..."
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:lineSpacingMultiplier="1.5"
                            android:layout_marginBottom="16dp"
                            android:breakStrategy="balanced"
                            android:hyphenationFrequency="normal" />

                        <TextView
                            android:id="@+id/tvUnlockPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unlock for 50 coins"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/btnUnlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unlock Chapter"
                            android:backgroundTint="#77dd77"
                            android:textColor="#000000" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Navigation Buttons -->
                <LinearLayout
                    android:id="@+id/navigationButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnPrevChapter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â—€ Prev"
                        android:backgroundTint="#333333"
                        android:textColor="#ffffff"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnChaptersList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â˜° List"
                        android:backgroundTint="#444444"
                        android:textColor="#77dd77"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš™ Font"
                        android:backgroundTint="#444444"
                        android:textColor="#77dd77"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btnNextChapter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Next â–¶"
                        android:backgroundTint="#77dd77"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>