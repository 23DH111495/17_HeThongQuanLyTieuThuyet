@{
    Layout = "~/Areas/Admin/Views/Shared/_NovelAdminLayout.cshtml";
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Package Management - WebNovel Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/CSS_SCRIPT/CoinPackage/CP_CRUD.css" rel="stylesheet" />
    <link href="~/Areas/Admin/CSS_SCRIPT/SideBar/Header.css" rel="stylesheet" />

</head>
<body>
    <div class="top-bar">
        <div class="">
            <h1 class="page-title" id="pageTitle">
                <i class="fas fa-plus"></i>
                Add New Package
            </h1>
            <p style="margin-left: 220px;">Manage Coinpackage with full CRUD operations and moderation</p>
        </div>
        <div class="user-info">
            <span>Welcome, Admin</span>
            <div class="user-avatar">A</div>
        </div>
    </div>


    <div class="main-content">
        <div class="package-container">
            <div class="package-header">
                <h3 class="package-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    Confirm Deletion
                </h3>
            </div>
            <div class="package-body">
                <div class="delete-warning">
                    <div class="delete-warning-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Warning: This action cannot be undone
                    </div>
                    <div class="delete-warning-text">
                        Deleting this package will permanently remove it from the system. Users who have purchased this package will keep their coins, but the package will no longer be available for new purchases.
                    </div>
                </div>

                <div class="view-field">
                    <span class="view-label">Package Name:</span>
                    <span class="view-value">Starter Pack</span>
                </div>
                <div class="view-field">
                    <span class="view-label">Price:</span>
                    <span class="view-value">$4.99</span>
                </div>
                <div class="view-field">
                    <span class="view-label">Total Sales:</span>
                    <span class="view-value">1,247 purchases</span>
                </div>
                <div class="view-field">
                    <span class="view-label">Revenue Generated:</span>
                    <span class="view-value highlight">$6,222.53</span>
                </div>

                <div class="action-buttons">
                    <a href="@Url.Action("ViewPackage", "Coin_Manager", new { id = 1 })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Delete Package
                    </button>
                </div>
            </div>
        </div>
    </div>


</body>
</html>