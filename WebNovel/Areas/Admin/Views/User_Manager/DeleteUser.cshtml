@{
    Layout = "~/Areas/Admin/Views/Shared/_NovelAdminLayout.cshtml";
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Delete User Confirmation</title>
    <link href="~/Areas/Admin/CSS_SCRIPT/SideBar/Header.css" rel="stylesheet" />
    <link href="~/Areas/Admin/CSS_SCRIPT/SideBar/BreadCrumb.css" rel="stylesheet" />
    <link href="~/Areas/Admin/CSS_SCRIPT/User/User_Delete.css" rel="stylesheet" />
</head>
<body>
    <div class="top-bar">
        <div class="">
            <h1 class="page-title">Delete User Confirmation</h1>
            <p style="margin-left: 220px;">Permanently remove this chapter from the system</p>
        </div>
        <div class="user-info">
            <span>Welcome, Admin</span>
            <div class="user-avatar">A</div>
        </div>
    </div>

    <div class="breadcrumb">
        <a href="@Url.Action("User_Manager")">User Manager</a> >
        <a href="@Url.Action("DeleteUser")">@Model.Username</a>
    </div>

    <div class="user-delete-confirmation-container">
        <div class="delete-confirmation-form">
            <div class="delete-header">
                <h1 class="delete-title">Confirm User Deletion</h1>
                <p class="delete-subtitle">This action cannot be undone</p>
            </div>

            <div class="warning-section">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h2 class="warning-title">DANGER ZONE</h2>
                <p class="warning-message">
                    You are about to permanently delete this user and all associated data.
                    This action is irreversible and will affect all content created by this user.
                </p>
            </div>

            <div class="user-details-section">
                <div class="details-grid">
                    <div class="user-avatar-container">
                        <!-- Replace with your actual image code -->
                        <img id="img-@Model.Id"
                             src="@Url.Action("GetProfilePicture", "User_Manager", new { id = Model.Id })"
                             alt="@Model.Username"
                             class="user-avatar-delete"
                             onerror="handleImageError(@Model.Id, '@Model.ProfilePicture', '@Model.Username.Substring(0, 1).ToUpper()')" />
                    </div>

                    <div class="user-info-delete">
                        <div class="info-row">
                            <span class="info-label">Username:</span>
                            <span class="info-value">@Model.Username</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@Model.Email</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Name:</span>
                            <span class="info-value">@Model.FirstName @Model.LastName</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Role:</span>
                            <span class="info-value">@Model.RoleName</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Status:</span>
                            <span class="info-value">
                                <span class="status-badge status-@(Model.IsActive ? "active" : "inactive")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Joined:</span>
                            <span class="info-value">@Model.JoinDate.ToString("MMMM dd, yyyy")</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Email:</span>
                            <span class="info-value">@(Model.EmailVerified ? "Verified" : "Not Verified")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="consequences-section">
                <h3 class="consequences-title">What will be deleted:</h3>
                <ul class="consequences-list">
                    <li>The user account and all profile data</li>
                    <li>All role assignments and permissions</li>
                    <li>User type records (Reader, Author, Staff, Admin)</li>
                    <li>Associated content and activities</li>
                    <li>Login history and preferences</li>
                    <li>All related database entries</li>
                </ul>
            </div>

            <div class="action-buttons">
                <a href="@Url.Action("User_Manager")" class="btn btn-secondary">
                    Cancel & Return
                </a>

                <form method="post" action="@Url.Action("DeleteConfirmed", new { id = Model.Id })" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this user? This action cannot be undone!');">
                        <i class="fas fa-trash"></i>
                        Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>