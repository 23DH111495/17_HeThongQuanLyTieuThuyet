@{
    Layout = "~/Areas/Admin/Views/Shared/_NovelAdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Novel</title>
    <link href="~/Areas/Admin/CSS_SCRIPT/Novel/DeleteNovel.css" rel="stylesheet" />
    <link href="~/Areas/Admin/CSS_SCRIPT/SideBar/Header.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="novels-alert novels-alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="novels-alert novels-alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="top-bar">
        <div class="">
            <h1 class="page-title" id="pageTitle">Delete Novel Confirmation</h1>
            <p style="margin-left: 220px;">Permanently remove this novel from the system</p>
        </div>
        <div class="user-info">
            <span>Welcome, Admin</span>
            <div class="user-avatar">A</div>
        </div>
    </div>

    <div class="delete-confirmation-container">
        <div class="delete-confirmation-form">
            <div class="delete-header">
                <h1 class="delete-title">Confirm Novel Deletion</h1>
                <p class="delete-subtitle">This action cannot be undone</p>
            </div>

            <div class="warning-section">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h2 class="warning-title">DANGER ZONE</h2>
                <p class="warning-message">
                    You are about to permanently delete this novel and all associated data.
                    This action is irreversible and will affect all readers who have this novel in their library.
                </p>
            </div>

            <div class="novel-details-section">
                <div class="details-grid">
                    <div class="novel-cover">
                        @if (Model.HasCoverImage)
                        {
                            <!-- Use the new action to serve the image from database -->
                            <img src="@Url.Action("GetCoverImage", "Novel_Manager", new { id = Model.Id })"
                                    alt="@Model.Title Cover"
                                    class="cover-image"
                                    onerror="this.src='/Content/images/no-cover-placeholder.jpg';" 
                            />
                        }
                        else
                        {
                            <div class="cover-placeholder">
                                <i class="fas fa-book"></i>
                            </div>
                        }
                    </div>

                    <div class="novel-info">
                        <div class="info-row">
                            <span class="info-label">Title:</span>
                            <span class="info-value">@Model.Title</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Author:</span>
                            <span class="info-value">@(Model.Author?.PenName ?? "Unknown Author")</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Status:</span>
                            <span class="info-value">
                                <span class="status-badge status-@(Model.Status?.ToLower() ?? "unknown")">@(Model.Status ?? "Unknown")</span>
                            </span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Chapters:</span>
                            <span class="info-value">@((Model.TotalChapters)) chapters</span>
                        </div>

                        <div class="info-row">
                            <span class="info-label">Created:</span>
                            <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>

                        @if (Model.ViewCount > 0)
                        {
                            <div class="info-row">
                                <span class="info-label">Views:</span>
                                <span class="info-value">@Model.ViewCount.ToString("N0")</span>
                            </div>
                        }

                        @if (Model.TotalRatings > 0)
                        {
                            <div class="info-row">
                                <span class="info-label">Rating:</span>
                                <span class="info-value">@Model.AverageRating.ToString("F1")/5.0 (@Model.TotalRatings ratings)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="consequences-section">
                <h3 class="consequences-title">What will be deleted:</h3>
                <ul class="consequences-list">
                    <li>The novel and all its metadata</li>
                    <li>All @((Model.TotalChapters)) chapters and their content</li>
                    <li>All user ratings and reviews</li>
                    <li>Reading progress for all users</li>
                    <li>Comments and discussions</li>
                    <li>Genre and tag associations</li>
                </ul>
            </div>

            <div class="action-buttons">
                <a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Cancel & Return
                </a>

                <form method="post" action="@Url.Action("DeleteNovelConfirmed", new { id = Model.Id, search = ViewBag.Search, statusFilter = ViewBag.StatusFilter, moderationFilter = ViewBag.ModerationFilter, activeFilter = ViewBag.ActiveFilter, page = ViewBag.CurrentPage })" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this novel? This action cannot be undone!');">
                        <i class="fas fa-trash"></i>
                        Delete Novel
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>