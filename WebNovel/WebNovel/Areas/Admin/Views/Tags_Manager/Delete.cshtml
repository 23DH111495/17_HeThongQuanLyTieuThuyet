@{
    Layout = "~/Areas/Admin/Views/Shared/_NovelAdminLayout.cshtml";
}
@model WebNovel.Models.Tag
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Tag</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/CSS_SCRIPT/Tags/Tags_Delete.css" rel="stylesheet" />
</head>
<body>
    <div class="top-bar">
        <div class="">
            <h1 class="page-title">Delete Tag</h1>
            <p style="margin-left: 220px;">Confirm tag deletion</p>
        </div>
        <div class="user-info">
            <span>Welcome, Admin</span>
            <div class="user-avatar">A</div>
        </div>
    </div>
    <div class="tags-container">
        <div class="form-container">
            <div class="delete-confirmation">
                <div class="warning-header">
                    <div class="warning-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h2>Delete Confirmation</h2>
                    <p>You are about to permanently delete this tag from the system</p>
                </div>

                <div class="tag-details-card">
                    <div class="tag-main-info">
                        <div class="tag-title-section">
                            <h3 class="tag-display-name">@Model.DisplayName</h3>
                            <span class="tag-id-badge">#@Model.Id</span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="tag-description-section">
                                <label>Description:</label>
                                <p>@Model.Description</p>
                            </div>
                        }
                    </div>

                    <div class="tag-metadata-grid">
                        <div class="metadata-item">
                            <label>Status</label>
                            <div class="status-indicator @(Model.IsActive ? "active" : "inactive")">
                                <span class="status-dot"></span>
                                @(Model.IsActive ? "Active" : "Inactive")
                            </div>
                        </div>

                        <div class="metadata-item">
                            <label>Created Date</label>
                            <span class="created-date">@Model.CreatedAt.ToString("MM/ dd/ yyyy")</span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="metadata-item">
                                <label>Color</label>
                                <div class="color-display">
                                    <div class="color-swatch" style="background-color: @Model.Color"></div>
                                    <span>@Model.Color</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="warning-notice">
                    <div class="notice-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div class="notice-content">
                        <strong>Warning:</strong> This action is irreversible. Once deleted, this tag cannot be recovered.
                    </div>
                </div>

                <div class="form-actions">
                    @Html.ActionLink("Cancel", "Tags_Manager", null, new { @class = "btn btn-cancel" })
                    @using (Html.BeginForm("DeleteConfirmed", "Tags_Manager", FormMethod.Post, new { style = "display: inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", Model.Id)
                        <input type="submit" value="Delete Tag" class="btn btn-delete" onclick="return confirm('Are you absolutely sure you want to delete this tag?');" />
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>